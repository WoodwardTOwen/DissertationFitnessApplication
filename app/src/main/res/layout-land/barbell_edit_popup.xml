<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plate_math_calc_background"
    android:id="@+id/barbellPopUpEdit">

    <EditText
        android:id="@+id/barbellTypeTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="@string/BarbellName"
        android:ems="10"
        android:hint="@string/BarbellName"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297" />

    <EditText
        android:id="@+id/barbellWeightTb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="@string/BarbellWeight"
        android:ems="10"
        android:hint="@string/BarbellWeight"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SubmitBarbellBnt"
        android:layout_width="149dp"
        android:layout_height="41dp"
        android:background="@drawable/button_home_menu_design"
        android:text="@string/AddBarbellBnt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716" />
</androidx.constraintlayout.widget.ConstraintLayout>