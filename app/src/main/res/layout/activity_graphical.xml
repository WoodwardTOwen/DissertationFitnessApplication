<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#35373b"
    tools:context=".graphical_analysis_package.GraphicalActivity">

    <Spinner
        android:id="@+id/categorySpinnerGraphical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"/>

    <Spinner
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/categorySpinnerGraphical"
        android:id="@+id/exerciseSpinnerGraphical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChartView"
        android:layout_below="@+id/categorySpinnerGraphical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</RelativeLayout>