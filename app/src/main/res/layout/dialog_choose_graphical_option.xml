<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp" android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:id="@+id/dialog_choose_graphical_option"
    >

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@color/colorDatePicker">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/nav_graphical"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:text="@string/GraphicalAnalysisPrompt"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:padding="4dp"
        android:text="@string/GraphicalAnalysisFurtherInformation"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

    <Button
        android:id="@+id/graphical_Analysis_Max_Weight_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:text="@string/GraphicalAnalysisMaxWeight"
        android:background="@color/colorLightGrey"
        />

    <Button
        android:id="@+id/graphical_Analysis_Max_Volume_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:text="@string/GraphicalAnalysisMaxVolume"
        android:background="@color/colorLightGrey"
        />

</LinearLayout>